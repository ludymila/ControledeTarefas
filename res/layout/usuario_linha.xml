<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/usuario_linha_login"
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="29dp"
         android:ems="10"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:text="" />

    <TextView
        android:id="@+id/usuario_linha_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usuario_linha_login"
        android:layout_below="@+id/usuario_linha_login"       
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:text="" />

    <TextView
        android:id="@+id/usuario_linha_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usuario_linha_nome"
        android:layout_below="@+id/usuario_linha_nome"
    
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:text="" />
   
</RelativeLayout>